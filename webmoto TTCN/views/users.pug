html
    head
        title Quản lý người dùng
        link(rel="stylesheet", href="/static/users.css")
    body
        h2 Quản lý người dùng

        // Các liên kết điều hướng
        a.back-link(href="/admin") Quay lại trang admin
        br
        a.back-link(href="/") Quay lại trang chủ

        a(href="/create-user") Tạo người dùng mới

        // Bảng hiển thị thông tin người dùng
        table.content-table
            thead
                tr
                    th Username
                    th Ngày Sinh
                    th Số Điện thoại
                    th Email
                    th Role
                    th Hành động
            tbody
                each user in users
                    tr
                        td= user.username
                        td= user.NgaySinh
                        td= user.SoDT
                        td= user.email
                        td= user.role
                        td
                            a(href=`/user/${user._id}`) Xóa
                            br
                            a(href=`/update-user/${user._id}`) Cập nhật
